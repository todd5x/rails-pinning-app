<% if !@errors.nil? %>
<div class="text-danger">
    <label><%= pluralize(@errors.count, "error") %> prohibited this pin from being saved:</label>
    <ul>
        <% @errors.full_messages.each do |msg| %>
        <li><%= "#{msg}" %></li>
    <% end %>
    </ul>
</div>
<% end %>

<%= form_for(@pin, multipart: true, :html => {:class => 'col-md-8 form-horizontal'})  do |f| %>
<div class="panel">
    <div class="panel-body">
		<div class="form-group">
            
			<label for="pin_title" class="col-md-2 control-label">Title</label>
            
			<div class="col-md-8">
    <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
            </div>
            
</div>

	<div class="form-group">
        
			<label for="pin_url" class="col-md-2 control-label">Web Address</label>
        
			<div class="col-md-8">
        <%= f.url_field :url, class: "form-control", placeholder: "http://www.someexample.com" %>
        </div>
        
    </div>

		<div class="form-group">
            
			<label for="pin_text" class="col-md-2 control-label">Description</label>
            
			<div class="col-md-8">
         <%= f.text_area :text, class: "form-control", placeholder: "Description" %>
</div>
            
    </div>

<div class="form-group">
    
			<label for="pin_slug" class="col-md-2 control-label">Slug</label>
    
			<div class="col-md-8">
         <%= f.text_field :slug, class: "form-control", placeholder: "Pretty URL" %>
    </div>
    
    </div>



<div class="form-group">
			<label for="pin_image" class="col-md-2 control-label">Image</label>
			<div class="col-md-8">
                <div class="form-control">
                <%= f.file_field :image, class: "file-input" %> 
                </div>
    </div>
   
</div>

        
<div class="form-group">
			<div class="col-md-2"></div>
			<div class="col-md-8">
        <%= f.button :Submit, class: "btn btn-default" %>
        </div>
    </div>
</div>
</div>
<% end %>